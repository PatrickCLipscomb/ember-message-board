<div class="row container">
  <div class="col-xs-8 col-xs-offset-2 jumbotron">
    {{new-question save="save"}}
  </div>
  <div class="col-xs-2">

  </div>
  <div class="col-xs-8 col-xs-offset-2">
    <hr>
    <ul class="list-group">
      {{#each model as |question|}}
