<div class="row container">
  <div class="col-xs-8 col-xs-offset-2 jumbotron">
    <h3>{{model.content}}</h3>
    <p>
      {{model.notes}}
    </p>
    <hr>
    <p>
      {{model.author}}
    </p>
    <hr>
    {{new-answer question=model newAnswer="newAnswer"}}
  </div>
</div>
<div>
  <h2 align="middle">Answers</h2>
  <ul class="list-group center">
    {{#each model.answers as |answer|}}
      <li class="list-item-group"><h4>
        {{answer.content}}
      </h4><h5>
        {{answer.author}}
      </h5><p>
        {{answer.timestamp}}
      </p></li>
    {{/each}}
  </ul>
</div>
